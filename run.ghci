-- :set prompt-function \_ _ -> System.Posix.User.getLoginName >>= (\name -> return (" \ESC[1m" ++ name ++ "\ESC[0m \ESC[35mλ\ESC[0m "))

:load Fugue.hs

import Fugue

echo = putStrLn

-- Set Terminal Title
putStrLn "\x1b]0;Haskshell\a"

-- Environment Variables
home <- getEnv "HOME"

configDir = "/home/soundwave/.config/haskshell" :: FilePath

-- Custom directory bookmarks
up = ".." :: FilePath
here = "." :: FilePath
programming = "/home/soundwave/Programming" :: FilePath

-- Custom boring commands
htop = callCommand "htop"
open x = callCommand $ "xdg-open \"" ++ x ++ "\""
bash = callCommand "bash"
pyshell = callCommand "python3"
pyinstall package = callCommand $ "pip3 install " ++ package
python path = callCommand $ "python3 \"" ++ path ++ "\""
pacUpdate = callCommand "sudo pacman -Syyu"
reboot = callCommand "reboot"
sl = callCommand "sl"

-- Custom awesome commands
url link = callCommand $ "w3m " ++ link
gimp fileName = callCommand $ "gimp " ++ "\"" ++ fileName ++ "\""
nb = callCommand "stack exec jupyter-notebook"
install package = callCommand $ "stack install " ++ package
aport port = callCommand $ "aport " ++ port
musescore = callCommand "npx dl-librescore@latest"

gpt prompt = callCommand $ "chatgpt -p \"" ++ prompt ++ "\""
